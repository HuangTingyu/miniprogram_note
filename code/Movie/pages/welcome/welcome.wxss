.user-wrap{
    width:400rpx;
    margin:160rpx auto;
    
}
.user-flex{
    display: flex;
    flex-direction:column;
    align-items: center;
}
.user-name{
    margin-top: 50rpx;
    font-weight: bold;
    font-size:32rpx;
    color: #333;
}
.user-avatar-wrap{
    margin-top:50rpx;
    flex:1;
}
.user-avatar{
    width:200rpx;
    height:200rpx;
    border-radius: 50%;
}
.user-btn{
    margin-top:200rpx;
    width:250rpx;
    height:100rpx;
    line-height: 100rpx;
    text-align: center;
    color:#405f80;
    border:1px #405f80 solid;
    border-radius:5px;
}
page{
  height:100%;
  background-color: #b3d4db;
}