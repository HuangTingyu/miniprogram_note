.posts_wrap{
    display: flex;
    flex-direction: column;
    margin:10px 0;
    border-bottom:1px solid #eee;
}
.posts_user{
    flex:1;
    display: flex;
    align-items: center;
}
.posts_user_img{
    width:32px;
    height:32px;
    border-radius:50%;
    margin-left:10px;
}
.posts_user_date{
    width:200px;
    height:32px;
    line-height:32px;
    font-size:12px;
    margin-left:20px;
    color:#333;
}
.posts_title{
    flex:1;
    margin-top:10px;
    margin-left:10px;
    font-size:34rpx;
    color:#333;
    font-weight: 600;
}
.posts_img{
    width:750rpx;
    margin-top:10px;
}
.posts_desc{
   margin:10px 10px;
   color:#666;
   font-size:32rpx;
   letter-spacing: 2rpx;
}
.posts_star{
    flex:1;
    display: flex;
    align-items: center;
}
.posts_star_img{
    width:12px;
    height:12px;
}
.posts_star > image{
    margin:10px 10px;
}
.posts_star > text{
  font-size:24rpx;
  color:#aaa;
}